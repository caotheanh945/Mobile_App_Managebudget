<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imguserdangtin"
        android:layout_width="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:src="@drawable/imgg" />

    <TextView
        android:id="@+id/tvusername"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imguserdangtin"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvcaption"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imguserdangtin"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="TextView" />


    <ImageView
        android:id="@+id/imgpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcaption"
        android:layout_centerInParent="true"
        android:src="@drawable/baseline_person_24" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/imgpost"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_lines"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imglike"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/baseline_thump_up_24" />
        <TextView
            android:id="@+id/tvemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E4E4E"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Thích" />
        <ImageView
            android:id="@+id/imgcomment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="155dp"
            android:src="@drawable/baseline_comment_24" />
        <TextView
            android:id="@+id/tvcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:textColor="#4E4E4E"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tvemo"
            android:text="Bình luận" />
        <TextView
            android:id="@+id/tvshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E4E4E"
            android:drawableStart="@drawable/baseline_share_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="Chia sẽ" />

    </RelativeLayout>
</RelativeLayout>