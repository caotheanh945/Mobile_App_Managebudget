<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.Dang_Nhap">
    <ImageView
        android:id="@+id/img_tv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"
        android:src="@drawable/giadinh2" />

    <TextView
        android:id="@+id/textview_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:minHeight="48dp"
        android:onClick="dangki"
        android:text="ĐĂNG NHẬP THÀNH VIÊN"
        android:textStyle="bold"
        android:textColor="#3C8D8F"
        android:textSize="30sp"
        tools:ignore="OnClick" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="  Email đăng nhập"
        app:counterMaxLength="20"
        app:endIconMode="clear_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_login">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/accounttv_tv"
            android:maxLength="20"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"/>
    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/testInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout"
        android:layout_marginTop="12dp"
        android:hint="  Mật khẩu"
        app:endIconMode="password_toggle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passtv_tv"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu ?"
        android:textColor="#3C8D8F"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/logintv_tv"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Đăng nhập"
        android:textStyle="bold"
        android:layout_marginTop="36px"
        android:textColor="@color/white"
        android:textSize="16dp"
        />



</LinearLayout>